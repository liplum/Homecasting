{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": false,
    "outDir": "dist",
    "allowJs": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "target": "es2015",
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
  ]
}