{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/liplum/Meditree/master/backend-js/config-schema.json",
  "title": "Meditree configuration",
  "description": "The JSON schema for config.json that Meditree used.",
  "type": "object",
  "properties": {
    "readonly": {
      "type": "boolean"
    },
    "name": {
      "type": "string"
    },
    "hostname": {
      "type": "string"
    },
    "port": {
      "type": "integer"
    },
    "root": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      ]
    },
    "enhancedMimeType": {
      "type": "boolean"
    },
    "mimeTypes": {
      "additionalProperties": {
        "type": "string"
      }
    },
    "includes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "logLevel": {
      "enum": [
        "ERROR",
        "WARN",
        "INFO",
        "DEBUG",
        "VERBOSE"
      ]
    },
    "plugin": {
      "type": "object",
      "properties": {
        "admin": {
          "$ref": "https://raw.githubusercontent.com/liplum/Meditree/master/backend-js/plugin/admin/admin.schema.json"
        },
        "admin-auth-token": {
          "$ref": "https://raw.githubusercontent.com/liplum/Meditree/master/backend-js/plugin/admin/auth-token.schema.json"
        }
      },
      "additionalProperties": {
        "oneOf": [
          {
            "type": "boolean"
          },
          {
            "type": "object",
            "properties": {
              "_disabled": {
                "type": "boolean"
              },
              "_depends": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "additionalProperties": {}
          }
        ]
      }
    }
  }
}