{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Meditree configuration",
  "description": "The JSON schema for config.json that Meditree used.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "hostname": {
      "type": "string"
    },
    "port": {
      "type": "integer"
    },
    "root": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      ]
    },
    "enhancedMimeType": {
      "type": "boolean"
    },
    "mimeTypes": {
      "additionalProperties": {
        "type": "string"
      }
    },
    "includes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "plugin": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "_disabled": {
            "type": "boolean"
          },
          "_depends": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": {}
      }
    }
  }
}