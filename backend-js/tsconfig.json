{
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "declaration": true,
    "sourceMap": true,
    "target": "ES2022",
    "module": "ES2022",
    "outDir": "dist",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strictNullChecks": true
  },
  "include": [
    "src/**/*.ts",
    "src/index.ts",
    "src/host.ts",
    "src/file.ts",
    "src/server.ts",
  ]
}